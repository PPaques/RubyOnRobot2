.page-header
  = link_to tasks_path, :class => 'btn' do
    %i.icon-list-alt
    Back
  = link_to edit_task_path(@task), :class => 'btn btn-primary' do
    %i.icon-pencil.icon-white
    Edit
  %h1 Listing tasks

%dl
  %dt Name:
  %dd= @task.name
  %dt Description:
  %dd= @task.description
  %dt Time max:
  %dd= @task.time_max
  %dt State to send:
  %dd= @task.state_to_send_id
  %dt State asked:
  %dd= @task.state_asked_id
  %dt Operation error:
  %dd= @task.operation_error_id
